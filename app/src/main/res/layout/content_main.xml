<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zoinks.waterreporting.controllers.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/username_label"
        android:text="@string/prompt_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp" />

    <TextView
        android:id="@+id/firstname_label"
        android:text="@string/prompt_firstname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp" />

    <TextView
        android:id="@+id/lastname_label"
        android:text="@string/prompt_lastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp" />

    <TextView
        android:id="@+id/privilege_label"
        android:text="@string/prompt_privilege"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp" />

    <Button
        android:text="@string/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logout_button" />

    <Button
        android:text="@string/profile_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/update_profile" />

</LinearLayout>
